{
  "name": "Spotify Search Extension",
  "description": "Use the context menu to search for the highlighted term on Spotify",
  "version": "0.1",
  "manifest_version": 2,
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "https://open.spotify.com/"
  ],
  "background": {
    "scripts": [
      "locales.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "globalGoogle16.png",
    "48": "globalGoogle48.png",
    "128": "globalGoogle128.png"
  }
}